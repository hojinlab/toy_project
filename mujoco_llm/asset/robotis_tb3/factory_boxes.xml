<mujoco model="factory">
    <option timestep="0.001" gravity="0 0 -9.81"
            integrator="RK4" solver="PGS" />

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" />
        <rgba fog="0.10 0.12 0.14 1" />
        <global azimuth="120" elevation="-20" />
    </visual>

    <asset>
        <texture type="skybox" builtin="gradient"
                 rgb1="0.05 0.08 0.12" rgb2="0.25 0.27 0.30"
                 width="512" height="3072" />

        <material name="floor_mat" rgba="0.6 0.6 0.6 1" reflectance="0.3" />

        <texture name="kmu_logo_tex" type="2d" file="Signature_KMU.png" />
        <material name="logo_mat" texture="kmu_logo_tex" texuniform="true" />
        
        <material name="box_mat" rgba="0.8 0.2 0.2 1" reflectance="0.5" />

        <mesh name="tetra_mesh"
              vertex="0.05 0.05 0.05
                      -0.05 -0.05 0.05
                      -0.05 0.05 -0.05
                      0.05 -0.05 -0.05"/>
    </asset>

    <worldbody>
        <light pos="0 0 8" dir="0 0 -1" directional="true" />

        <geom name="floor_base" type="plane" size="8 6 0.05" pos="0 0 0" material="floor_mat" />

        <geom name="floor_logo"
              type="box"
              pos="0 0 0.001"
              size="1.5 1.5 0.0005"
              material="logo_mat" />

        <geom name="wall_front" type="box" pos="0 6 1" size="8 0.1 1" rgba="0.18 0.20 0.3 1" />
        <geom name="wall_back" type="box" pos="0 -6 1" size="8 0.1 1" rgba="0.18 0.20 0.3 1" />
        <geom name="wall_left" type="box" pos="-8 0 1" size="0.1 6 1" rgba="0.18 0.20 0.3 1" />
        <geom name="wall_right" type="box" pos="8 0 1" size="0.1 6 1" rgba="0.18 0.20 0.3 1" />

        <body name="movable_box" pos="1 -1 0.05">
            <freejoint />
            
            <geom name="box_geom" 
                  type="box" 
                  size="0.05 0.05 0.05" 
                  material="box_mat" 
                  mass="0.5"
                  friction="0.5 0.005 0.0001" /> 
                  </body>

        <body name="movable_sphere" pos="0 1 0.05">
            <freejoint />
            
            <geom name="sphere_geom" 
                  type="sphere" 
                  size="0.05 0.05" 
                  material="box_mat" 
                  mass="0.5"
                  friction="1.0 0.05 0.01" /> 
        </body>

        <body name="movable_tetra" pos="1 1 0.05">
            <freejoint/>
            <geom name="tetra_geom"
                  type="mesh"
                  mesh="tetra_mesh"
                  material="box_mat"
                  mass="0.005"
                  friction="0.5 0.005 0.0001"/>
        </body>

        <body name="movable_cylinder" pos="1 0 0.05">
            <freejoint />
            <geom name="cyl_geom"
            type="cylinder"
            size="0.05 0.05"
            material="box_mat"
            mass="0.5"/>
        </body>
    </worldbody>
</mujoco>